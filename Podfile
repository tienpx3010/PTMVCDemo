platform :ios, '9.0'

def pods
    # Networking
    pod 'Alamofire', '~> 4.8.1'
  
    # Mapping
    pod 'AlamofireObjectMapper', '~> 5.2.0'
  
    # Convention
    pod 'SwiftLint', '~> 0.31.0'
  
    # Database
    pod 'Realm', '~> 3.13.1'
    
    # Core
    pod 'Reusable', '4.0.5'
    pod 'Then', '2.4'
end

target 'ios-mvc_architect' do
    use_frameworks!
    inhibit_all_warnings!
    pods
end
